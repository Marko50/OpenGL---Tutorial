#version 330 core
  out vec4 FragColor;

  in vec3 ourColor;
  in vec2 TexCoord;

  uniform sampler2D ourTexture1;
  uniform sampler2D ourTexture2;
  uniform vec4 color;
  uniform vec4 lightColor;
  uniform float ambientStrength;

  void main()
  {
    vec4 ambient = ambientStrength * lightColor;
    vec4 result = ambient * color;
    FragColor = result;
  }